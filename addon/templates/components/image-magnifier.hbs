<img alt="Thumbnail Image" src={{src}} />

{{#if imageLoaded}}
  {{#if showLens}}
    {{magnifier-lens
      src=src
      magnifierDimensions=magnifierDimensions
      mouseX=mouseX
      mouseY=mouseY
      on-lens-insert=(action onLensInsert)}}
  {{/if}}
{{/if}}

{{#if showPreview}}
  {{magnifier-preview
    target=_previewerTarget
    attachment=previewerAttachment
    targetAttachment=previewerTargetAttachment
    offset=previewerOffset
    targetOffset=previewerTargetOffset
    src=preview-src
    zoom=zoom
    lensDimensions=lensDimensions
    magnifierDimensions=magnifierDimensions
    mouseX=mouseX
    mouseY=mouseY}}
{{/if}}
