{{async-image
  src=src
  alt="Minified Image"
  onload=(action onImgLoad)}}

{{#if imageLoaded}}
  {{#if showLens}}
    {{magnifier-lens
      src=src
      srcImgWidth=srcImgWidth
      srcImgHeight=srcImgHeight
      mouseX=mouseX
      mouseY=mouseY
      on-lens-insert=(action onLensInsert)}}
  {{/if}}
{{/if}}

{{#if showPreview}}
  {{magnifier-preview
    target=_previewerTarget
    attachment=previewerAttachment
    targetAttachment=previewerTargetAttachment
    offset=previewerOffset
    targetOffset=previewerTargetOffset
    src=preview-src
    zoom=zoom
    lensDimensions=lensDimensions
    srcImgWidth=srcImgWidth
    srcImgHeight=srcImgHeight
    mouseX=mouseX
    mouseY=mouseY}}
{{/if}}
